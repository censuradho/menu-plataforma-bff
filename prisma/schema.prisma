generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id
  firstName String @default("Unknow")
  lastName String @default("")
  phone String

  email String
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("users")
}

model OperationMode {
  id String @id

  label String

  stores Store[]

  @@map("operationModes")
}

model Store {
  id String @id
  name String

  document String
  documentType String

  cuisineType String

  establishmentTime String

  operationMode OperationMode[]

  revenueEstimate String

  numberOfEmployees Int @default(0)

  @@map("stores")
}

model MenuGroup {
  id String @id

  menus Menu[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("menuGroups")
}

model Menu {
  id String @id

  groupId String
  group MenuGroup @relation(fields: [groupId], references: [id])

  @@map("menus")
}

model Product {
  id String @id
  label String
  
  value String

  image String?

  visible Boolean @default(true)

  limitAge Boolean @default(false)

  @@map("products")
}

model ProductCustomPrice {
  id String @id

  value String
  code String

  @@map("productCustomPrice")
}