generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model StoreUser {
  id String @id
  firstName String @default("")
  lastName String @default("")
  phone String

  email String
  password String

  store Store?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("users")
}

model Asset {
  id Int  @id @default(autoincrement())

  publicId String
  url String

  createdAt DateTime @default(now())

  @@map("assets")
}

model StoreStaff  {
  id String @id

  fullName String
  email String
  password String

  storeId Int
  store Store @relation(fields: [storeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("Storestaff")
}

model OperationMode {
  id Int @id @default(autoincrement())

  label String

  stores Store[]

  @@map("operationModes")
}

model Store {
  id Int @id @default(autoincrement())

  name String

  hourFrom String?
  hourTo String?
  is24h Boolean @default(false)

  logo String?

  logoId Int?

  document String
  documentType String

  cuisineType String

  establishmentTime String

  revenueEstimate String

  numberOfEmployees String

  ownerId String @unique
  owner StoreUser @relation(fields: [ownerId], references: [id])

  staffs StoreStaff[]

  operationMode OperationMode[]

  menus Menu[]

  instagramUrl String?
  tikTokUrl String?
  facebook String?
  twitterUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  
  @@map("stores")
}


model Menu {
  id Int @id @default(autoincrement())

  label String

  visible Boolean @default(true)

  products Product[]

  storeId Int
  store Store @relation(fields: [storeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("menus")
}

model Product {
  id Int @id @default(autoincrement())

  label String
  description String?
  
  value String

  image String?

  visible Boolean @default(true)
  limitAge Boolean @default(false)

  customPrices ProductCustomPrice[]

  menuId Int
  menu Menu @relation(fields: [menuId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("products")
}

model ProductCustomPrice {
  id Int @id @default(autoincrement())

  value String
  code String
  active Boolean

  productId Int
  product Product @relation(fields: [productId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  
  @@map("productCustomPrice")
}